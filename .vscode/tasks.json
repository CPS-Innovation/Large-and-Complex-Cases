{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "run-azurite",
      "type": "shell",
      "command": "azurite --inMemoryPersistence",
      "options": {
        "cwd": "${workspaceFolder}/.vscode"
      },
      "problemMatcher": {
        "fileLocation": "absolute",
        "pattern": [
          {
            "regexp": ".",
            "file": 1,
            "location": 2,
            "message": 3
          }
        ],
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^.*Executing task.*$",
          "endsPattern": "^.*successfully listening at http://127.0.0.1:10002.*$"
        }
      },
      "isBackground": true
    },
    {
      "label": "clean (functions)",
      "command": "dotnet",
      "args": [
        "clean",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "type": "process",
      "problemMatcher": "$msCompile",
      "options": {
        "cwd": "${workspaceFolder}/backend/CPS.ComplexCases.API"
      }
    },
    {
      "label": "build (functions)",
      "command": "dotnet",
      "args": [
        "build",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "type": "process",
      "dependsOn": "clean (functions)",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": "$msCompile",
      "options": {
        "cwd": "${workspaceFolder}/backend/CPS.ComplexCases.API"
      }
    },
    {
      "label": "clean release (functions)",
      "command": "dotnet",
      "args": [
        "clean",
        "--configuration",
        "Release",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "type": "process",
      "problemMatcher": "$msCompile",
      "options": {
        "cwd": "${workspaceFolder}/backend/CPS.ComplexCases.API"
      }
    },
    {
      "label": "publish (functions)",
      "command": "dotnet",
      "args": [
        "publish",
        "--configuration",
        "Release",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "type": "process",
      "dependsOn": "clean release (functions)",
      "problemMatcher": "$msCompile",
      "options": {
        "cwd": "${workspaceFolder}/backend/CPS.ComplexCases.API"
      }
    },
    {
      "type": "func",
      "dependsOn": "build (functions)",
      "options": {
        "cwd": "${workspaceFolder}/backend/CPS.ComplexCases.API/bin/Debug/net8.0"
      },
      "command": "host start",
      "isBackground": true,
      "problemMatcher": "$func-dotnet-watch"
    },
    {
      "label": "clean-backend",
      "command": "dotnet",
      "type": "process",
      "args": ["clean", "${workspaceFolder}/backend"],
      "problemMatcher": "$msCompile",
      "presentation": {
        "revealProblems": "onProblem",
        "close": true
      }
    },
    {
      "label": "build-backend",
      "command": "dotnet",
      "type": "process",
      "args": ["build", "${workspaceFolder}/backend"],
      "problemMatcher": "$msCompile",
      "presentation": {
        "revealProblems": "onProblem",
        "close": true
      }
    },
    {
      "label": "run-backend",
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}/backend/CPS.ComplexCases.API/bin/Debug/net8.0",
        "env": {
          "EgressOptions__Url": "http://localhost:7080"
          // ,
          //"DdeiDevtunnelToken": "${env:DEVTUNNEL_TOKEN}"
        }
      },
      "command": "func start --no-build --verbose --password CPS.ComplexCases.API",
      "isBackground": true,
      "problemMatcher": "$func-dotnet-watch"
    },
    {
      "label": "build-and-run-backend",
      "dependsOrder": "sequence",
      "dependsOn": [
        "run-azurite",
        "clean-backend",
        "build-backend",
        "run-backend"
      ]
    },
    {
      "label": "build-ui",
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}/ui-spa"
      },
      "command": "npm install",
      "isBackground": true,
      "problemMatcher": {
        "owner": "custom",
        "pattern": {
          "regexp": "^.*$",
          "file": 1,
          "location": 2,
          "message": 3
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^.*$",
          "endsPattern": "^.*$"
        }
      },
      "presentation": {
        "revealProblems": "onProblem",
        "close": true
      }
    },
    {
      "label": "run-ui",
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}/ui-spa"
      },
      "command": "npm run dev",
      "isBackground": true,
      "problemMatcher": {
        "owner": "custom",
        "pattern": {
          "regexp": "^.*$",
          "file": 1,
          "location": 2,
          "message": 3
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^.*Executing task.*$",
          "endsPattern": "^.*ready in.*$"
        }
      }
    },
    {
      "label": "build-and-run-ui",
      "dependsOrder": "sequence",
      "dependsOn": ["build-ui", "run-ui"]
    },
    {
      "label": "build-and-run-all",
      "dependsOn": ["build-and-run-backend", "build-and-run-ui"],
      "problemMatcher": []
    }
  ]
}
