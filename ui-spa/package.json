{
  "name": "ui-spa",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "start": "vite preview",
    "lint": "eslint .",
    "prettier": "prettier --check ./src",
    "prettier:format": "prettier --write ./src",
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "ui:e2e": "npx playwright test --ui",
    "ui:e2e:ci": "vite build --mode playwright && CI=true npx playwright test",
    "ui:e2e:report": "npx playwright show-report ./playwright/playwright-report"
  },
  "dependencies": {
    "@azure/msal-browser": "^4.4.0",
    "@azure/msal-react": "^3.0.5",
    "dotenv": "^16.4.7",
    "govuk-frontend": "^5.8.0",
    "govuk-react": "^0.10.7",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "sass": "~1.77.6",
    "styled-components": "^6.1.15"
  },
  "devDependencies": {
    "@eslint/js": "^9.19.0",
    "@playwright/test": "^1.50.1",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@types/react": "^19.0.8",
    "@types/react-dom": "^19.0.3",
    "@types/styled-components": "^5.1.34",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/coverage-v8": "^3.0.6",
    "eslint": "^9.19.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.18",
    "globals": "^15.14.0",
    "jsdom": "^26.0.0",
    "msw": "^2.7.0",
    "prettier": "^3.5.1",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.22.0",
    "vite": "^6.1.0",
    "vite-plugin-svgr": "^4.3.0",
    "vitest": "^3.0.6"
  },
  "msw": {
    "workerDirectory": [
      "public"
    ]
  },
  "overrides": {
    "@azure/msal-react": {
      "react": "^16.8.0 || ^17 || ^18 || ^19"
    }
  }
}
