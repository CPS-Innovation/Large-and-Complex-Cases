{
  "name": "ui-spa",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "start": "vite preview",
    "lint": "tsc -b && eslint .",
    "prettier": "prettier --check ./src",
    "prettier:format": "prettier --write ./src",
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "e2e:test": "playwright test --ui",
    "e2e:report": "playwright show-report ./playwright/playwright-report",
    "e2e:build": "tsc -b && cross-env E2E_COVERAGE=1 vite build --mode playwright",
    "e2e:test:ci": "npm run e2e:build && cross-env CI=true playwright test"
  },
  "dependencies": {
    "@azure/msal-browser": "^4.4.0",
    "@azure/msal-react": "^3.0.5",
    "date-fns": "^4.1.0",
    "date-fns-tz": "^3.2.0",
    "dotenv": "^16.4.7",
    "govuk-react-jsx": "^7.1.0",
    "qs": "^6.14.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-error-boundary": "^5.0.0",
    "react-router": "^7.2.0",
    "sass": "~1.77.6",
    "use-reducer-async": "^2.1.1",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.19.0",
    "@playwright/test": "^1.47.2",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@testing-library/user-event": "^13.5.0",
    "@types/node": "^24.2.1",
    "@types/qs": "^6.9.18",
    "@types/react": "^19.0.8",
    "@types/react-dom": "^19.0.3",
    "@types/styled-components": "^5.1.34",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/coverage-v8": "^3.0.6",
    "cross-env": "^10.0.0",
    "eslint": "^9.19.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.18",
    "globals": "^15.14.0",
    "jsdom": "^26.0.0",
    "msw": "^2.7.0",
    "nyc": "^17.1.0",
    "playwright-msw": "^3.0.1",
    "prettier": "^3.5.1",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.22.0",
    "vite": "^6.1.0",
    "vite-plugin-istanbul": "^7.1.0",
    "vite-plugin-svgr": "^4.3.0",
    "vitest": "^3.0.6"
  },
  "msw": {
    "workerDirectory": [
      "public"
    ]
  },
  "overrides": {
    "@azure/msal-react": {
      "react": "^16.8.0 || ^17 || ^18 || ^19"
    }
  }
}
